<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.syl.demo.dao.UserDao">


    <sql id="Base_Column_List" >
        user_id as userId,
        user_name as  userName,
        password as password,
        role_ids as roleId,
        status as status,
        dept_id as deptId
    </sql>




    <!-- 获得用户信息-->
    <select id="getUserInfo"  parameterType="user" resultType="user" >
        select
        <include refid="Base_Column_List" />
        from user where 1=1
       <if test="roleId !=null " >
            and user_id=#{userId}
        </if>
    </select>

    <!-- 获得用户信息  分页-->
    <select id="getUserInfoByPage"   resultType="user" >
        select
        <include refid="Base_Column_List" />
        from user where 1=1
        <if test="#{start} !=null and #{row_count} !=null " >
            LIMIT  #{start}, #{row_count}
        </if>
    </select>
    <!-- 获得用户信息  分页-->
    <select id="pageCount"   resultType="page" >
        select
       count(1) AS "count"
        from user <where>
        status = '0'
    </where>
    </select>


    <!--创建用户-->
    <insert id="createUser" parameterType="user" keyColumn="user_id" >

        INSERT INTO user (user_id,user_name,password,role_ids,status,dept_id)
        VALUES(#{userId},#{userName},#{password},#{roleId},#{status},#{deptId})
    </insert>

    <!--删除用户-->
    <delete id="delete" parameterType="user" >

        DELETE FROM  user where user_id=#{userId}
    </delete>

</mapper>